<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/home_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/light_blue"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Item Name"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/home_cv"
        app:layout_constraintStart_toStartOf="@+id/home_cv"
        app:layout_constraintTop_toBottomOf="@+id/home_cv" />

    <TextView
        android:id="@+id/home_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="price"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/bright_pink"
        app:layout_constraintEnd_toEndOf="@+id/home_cv"
        app:layout_constraintStart_toStartOf="@+id/home_cv"
        app:layout_constraintTop_toBottomOf="@+id/home_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>